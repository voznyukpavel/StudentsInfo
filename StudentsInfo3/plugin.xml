<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="studentsinfo3.Application">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            class="studentsinfo3.Perspective"
            name="RCP Perspective"
            id="studentsInfo3.perspective">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            class="studentsinfo3.StudentsView"
            icon="icons/students.png"
            id="studentsInfo3.view.students"
            name="StudentsView"
            restorable="true">
      </view>
   </extension>
   <extension
         id="product1"
         point="org.eclipse.core.runtime.products">
      <product
            application="StudentsInfo3.application"
            name="Students Info">
         <property
               name="appName"
               value="Students Info">
         </property>
         <property
               name="windowImages"
               value="icons/alt16.png,icons/alt32.png">
         </property>
         <property
               name="aboutImage"
               value="icons/about.gif">
         </property>
         <property
               name="aboutText"
               value="%aboutText">
         </property>
      </product>
   </extension>
   <extension
         point="org.eclipse.ui.editors">
      <editor
            class="studentsinfo3.StudentEditor"
            default="false"
            icon="icons/student.gif"
            id="StudentsInfo3.editors.studentseditor"
            name="StudentEditor">
      </editor>
   </extension>

</plugin>
